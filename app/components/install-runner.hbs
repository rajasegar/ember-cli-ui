<div class="wrapper">
  <div class="flex-grid">
    <div class="box">
      <div class="input">
        <label class="input-label" for="name">Addon Name: </label>
        <Input class="input-box" id="name" type="text" class="input--big" placeholder="hello-world"
          @value={{this.name}} />
      </div>
    </div>
    <div class="box-button">
      <button class="button-action" type="button" class="text-right" {{on "click" this.runInstall}}>
        <FaIcon @icon="download" /> Install</button>
    </div>
  </div>
  <Terminal @command={{this.command}} @task="install" />
</div>