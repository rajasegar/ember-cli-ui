<div class="wrapper">
  <div class="flex-grid">
    <div class="box">
    <div class="input">
      <label class="input-label" for="task">Task: </label>
      <select class="input-box" id="task" {{on "change" this.updateTask}}>
        {{#each this.project.tasks as |t|}}
        <option value={{t.name}}>{{t.name}}</option>
        {{/each}}
      </select>
    </div>
    </div>
    <div>
    <button class="button-action" type="button" {{on "click" this.runTask}}>
      <FaIcon @icon="play" /> Run Task</button>
    <p><code>{{this.taskCommand}}</code></p>
    </div>

  </div>
  <Terminal @command={{this.command}} @task="project" />
</div>